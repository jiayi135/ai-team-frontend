{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist/public" }
    },
    {
      "src": "server/src/index.ts",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/server/src/index.ts"
    },
    {
      "source": "/socket.io/:path*",
      "destination": "/server/src/index.ts"
    },
    {
      "source": "/((?!api|socket.io).*)",
      "destination": "/index.html"
    }
  ]
}
